<UserControl x:Name="Input" x:Class="SimpleTwitchChat.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleTwitchChat"
             mc:Ignorable="d" 
              Background="#FF0C0C0C" FontFamily="Consolas" FontSize="16" >
    <Grid Margin="5" >
        <TextBlock x:Name="TextWithQuestion" Text="Streamer Name:" VerticalAlignment="Center" HorizontalAlignment="Left" SizeChanged="TextWithQuestion_SizeChanged"/>
        <TextBox x:Name="InputDate"  VerticalAlignment="Center" Background="#FF0C0C0C" BorderBrush="{x:Null}"  Cursor="Hand" KeyDown="InputDate_KeyDown" BorderThickness="0,0,0,0" />
    </Grid>
</UserControl>
